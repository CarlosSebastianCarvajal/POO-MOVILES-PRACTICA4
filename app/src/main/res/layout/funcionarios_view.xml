<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgViewPerfilF"
                android:layout_width="100dp"
                android:layout_height="match_parent">

            </ImageView>
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewNombreF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="nombre..."
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtviewCI_"
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:text="CI."
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtviewCiF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ci..."
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtviewGenero_"
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:text="Genero."
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtviewGeneroF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="genero..."
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtviewSituacion_"
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:text="Sit."
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtviewSituacionF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="situacion..."
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtviewCargo_"
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:text="Cargo."
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtviewCargoF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="cargo..."
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtviewFechaInicioF"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="01/01/2000"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtviewBarra_"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" - "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtviewFechaFinF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="01/01/2000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>